<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <style>
    .image-container {
    border: 2px solid #ccc;
    padding: 10px;
    height: 500px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    
}

/* Style for the image */
.my-image {
    width: 100%;
    max-width: 300px;
    height: 100%;
    border-radius: 5px;
}
  </style>
  <body>
    <center>
      <H1> I'm Atharv Pant</H1>
      <h2>Backend developer</h2>
   
    

    
  </center>
    <center>
      <h2>Latest Posts</h2>
    
    </center>    
   
      <center>
        <ul>
          <% if (data && data.length > 0) { %>
            <% data.forEach(post => { %>
              <div>
                <a href="/post/<%= encodeURIComponent(post._id) %>">
                <h2><%= post.title %></h2>   </a> 
          
        
            </div>
            <% }) %>
          <% } else { %>
            <p>No posts available</p>
          <% } %>
        
        </ul>         
      </center>
             
    <a class="pagination">&It; View old posts</a>  
    
    </body>   
  </body>
</html>

